<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ReadyWI"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/prepareButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_green"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:text="Be Prepared"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reportDamageButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_red"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:text="Emergency"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/disasterResourcesButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_blue"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:text="Disaster Resources"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!--<Button-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Types of Disasters"-->
            <!--android:id="@+id/typeDisasterButton"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:textStyle="bold"-->
            <!--android:background="#F44336"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="16dp" />-->

            <Button
                android:id="@+id/typeDisasterButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_orange"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:text="Types of Disasters"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


    <!--frame to hold the fragment for the rss listview-->
    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="#ff7d807f"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/FlashlightMenuButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/flashlight_ic" />


        <ImageButton
            android:id="@+id/SOSMenubutton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/sos_icon" />


    </LinearLayout>

