<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/ReadyWI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#979a99">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/prepareButton"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:background="#007704"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:text="@string/be_prepared"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/reportDamageButton"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:background="#800402"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:text="@string/Emergency"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/disasterResourcesButton"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:background="#001778"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:text="@string/disaster_resources"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/typeDisasterButton"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:background="#a17b00"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:text="@string/types_of_disasters"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>


        <!--frame to hold the fragment for the rss listview-->


        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:background="#ff7d807f"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/FlashlightMenuButton"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/flashlight_ic" />


            <ImageButton
                android:id="@+id/SOSMenubutton"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/sos_icon" />


        </LinearLayout>

        <!--listview from original layout, replaced with the fragment above-->
        <!--<ListView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/postListView"-->
        <!--android:layout_below="@+id/awText"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true" />-->

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>

