<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/disasterListView">
        </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="#ff7d807f">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/prepareMenuButton"
            android:layout_weight="1"
            android:src="@drawable/list_icon"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/emergencyMenuButton"
            android:layout_weight="1"
            android:src="@drawable/disaster_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/disasterMenuButton"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/custom_icon"
            android:scaleType="centerInside"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/SOSMenubutton"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/sos_icon"
            android:scaleType="centerInside"/>

    </LinearLayout>
</LinearLayout>